{
    "app-id" : "com.github.cjfloss.envelope",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.32",
    "sdk" : "org.gnome.Sdk",
    "base":"io.elementary.BaseApp",
    "base-version": "juno",
    "command" : "com.github.cjfloss.envelope",
    "finish-args" : [
        "--share=ipc", "--socket=x11",

        "--socket=wayland",

        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "envelope",
            "buildsystem" : "meson",
            "config-opts" : ["--buildtype=release"],
            "sources" : [{
                "type" : "git",
                "url" : "https://github.com/cjfloss/envelope.git"
            }]
        }
    ]
}
